<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/float_menu_layout_width"
              android:layout_height="@dimen/float_menu_layout_width"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        >

        <ImageView
            android:id="@+id/float_menu_item_img"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="@dimen/float_menu_item_top"
            android:src="@mipmap/action_menu_home"
            />

        <TextView
            android:id="@+id/float_menu_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            />
    </LinearLayout>

</LinearLayout>