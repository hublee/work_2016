<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/def_bg"
             android:clickable="true"
             tools:context="com.zeustel.top9.fragments.SearchEvaFragment"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/search_pager_card_bottom"
        android:layout_marginLeft="@dimen/search_pager_card_left"
        android:layout_marginRight="@dimen/search_pager_card_right"
        android:layout_marginTop="@dimen/search_pager_card_top"
        android:background="@android:color/white"
        app:cardCornerRadius="@dimen/cardview_corner_radius"
        app:cardElevation="@dimen/cardview_elevation"
        >

        <com.zeustel.top9.widgets.CustomRecyclerView
            android:id="@+id/search_pager_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </android.support.v7.widget.CardView>
</FrameLayout>
