<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.zeustel.top9.widgets.CircleImage
            android:id="@+id/item_ranking_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ic_icon"
            />

        <TextView
            android:id="@+id/item_ranking_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/good_selector"
            android:drawablePadding="5dp"
            android:gravity="center_vertical|right"
            android:minWidth="40dp"
            android:text="0"
            android:textColor="@color/def_line"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/item_ranking_icon"
            android:layout_marginTop="20dp"
            android:background="@color/def_line"
            />
    </RelativeLayout>
</FrameLayout>