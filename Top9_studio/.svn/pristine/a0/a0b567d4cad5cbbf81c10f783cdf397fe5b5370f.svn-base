<RelativeLayout
    android:id="@+id/testLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/def_bg"
    android:clickable="true"
    tools:context="com.zeustel.top9.fragments.SettingsHomeFragment"
    >

    <android.support.design.widget.TabLayout
        android:id="@+id/settings_home_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/settings_home_flag"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/settings_home_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settings_home_note"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/def_font"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/settings_home_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settings_home_commit"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/settings_home_note"
        android:textColor="@color/red"
        android:textSize="11sp"
        />

    <Button
        android:id="@+id/settings_home_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="40dp"
        android:background="@drawable/all_btn_bg"
        android:text="设置为首页"
        android:textColor="@drawable/all_text_color"
        />
</RelativeLayout>
