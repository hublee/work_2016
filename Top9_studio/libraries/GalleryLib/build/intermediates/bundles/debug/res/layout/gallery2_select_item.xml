<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:gravity="center">

    <ImageView
        android:id="@+id/gallery2_select_img_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background_gallery2_select"/>

    <ImageView
        android:id="@+id/gallery2_select_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/gallery_select_flag"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignRight="@+id/gallery2_select_img"
        android:layout_alignTop="@+id/gallery2_select_img"
        android:layout_margin="3dp"
        android:src="@drawable/gallery2_select_flag"
        android:visibility="invisible"/>

