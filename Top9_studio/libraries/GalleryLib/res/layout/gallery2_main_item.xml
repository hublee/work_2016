<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/gallery2_bucket_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:background="@drawable/gallery2_list_item_back"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/gallery2_bucket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/gallery2_bucket_img"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLength="15"
            android:maxWidth="100dp"
            android:singleLine="true"
            android:textColor="#474747"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/gallery2_bucket_hasCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/gallery2_bucket_name"
            android:gravity="left"
            android:textColor="#474747"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/set_nformation"/>
    </RelativeLayout>

</LinearLayout>