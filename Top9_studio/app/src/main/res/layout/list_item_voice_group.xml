<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/voice_group_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/voice_group_layout_margin_left"
        android:layout_marginRight="@dimen/voice_group_layout_margin_right"
        >

        <ImageView
            android:id="@+id/voice_group_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/voice_group_toggle_selector"
            />

        <TextView
            android:id="@+id/voice_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/voice_group_name_margin_left"
            android:layout_toRightOf="@+id/voice_group_toggle"
            android:gravity="center_vertical"
            android:minWidth="@dimen/voice_group_name_min_width"
            android:textColor="@color/def_font"
            android:textSize="@dimen/voice_group_name_size"/>

        <TextView
            android:id="@+id/voice_group_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/voice_group_count_margin_left"
            android:layout_toRightOf="@+id/voice_group_name"
            android:gravity="center"
            android:textColor="@color/def_line"
            android:textSize="@dimen/voice_group_count_size"/>

        <ImageView
            android:id="@+id/voice_group_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/voice_group_join_padding"
            android:src="@drawable/voice_join_selector"
            />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/voice_group_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_driver"
        android:layout_marginLeft="@dimen/voice_group_line_margin_left"
        android:layout_marginRight="@dimen/voice_group_line_margin_right"
        android:background="@color/def_line"
        />
</LinearLayout>