<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/def_bg"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:cardElevation="@dimen/cardview_elevation"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zeustel.top9.widgets.CircleImage
                android:id="@+id/overall_self_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_icon"
                />

            <TextView
                android:id="@+id/overall_self_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="asdaskldj"
                />

            <android.support.design.widget.TabLayout
                android:id="@+id/overall_self_tab"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/overall_self_icon"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="30dp"
                />


            <android.support.v4.view.ViewPager
                android:id="@+id/overall_self_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/overall_self_tab"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                />
            <!--
            app:tabSelectedTextColor：Tab被选中字体的颜色
            app:tabTextColor：Tab未被选中字体的颜色
            app:tabIndicatorColor：Tab指示器下标的颜色
            -->
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>