<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="28dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/sys_item_small_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"/>

        <com.zeustel.top9.widgets.PrintTextView
            android:id="@+id/sys_item_small_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/sys_item_small_name"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="1dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:background="@color/def_line"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <com.zeustel.top9.widgets.PrintTextView
            android:id="@+id/sys_item_small_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:singleLine="true"
            android:textColor="@color/red"/>

        <com.zeustel.top9.widgets.PrintTextView
            android:id="@+id/sys_item_small_des"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="8dp"
            android:lines="2"
            android:textSize="12sp"
            />
    </LinearLayout>
</LinearLayout>