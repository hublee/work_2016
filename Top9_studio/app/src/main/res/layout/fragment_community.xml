<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/def_bg"
              android:orientation="vertical"
              tools:context="com.zeustel.top9.fragments.CommunityFragment"
    >

    <include
        android:id="@+id/include_refresh_layout"
        layout="@layout/fragment_refresh_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/game_describe_card_margin"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/community_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/ic_browse"
            android:gravity="center"
            android:text="分类浏览"
            android:textColor="@color/def_font"
            android:textSize="11sp"
            />

        <FrameLayout
            android:id="@+id/community_line"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/line_vertical"
            ></FrameLayout>

        <TextView
            android:id="@+id/community_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/ic_edit"
            android:gravity="center"
            android:text="发新话题"
            android:textColor="@color/def_font"
            android:textSize="11sp"
            />
    </LinearLayout>
</LinearLayout>
