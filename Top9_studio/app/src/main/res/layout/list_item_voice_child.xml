<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/voice_child_icon"
        android:layout_width="@dimen/voice_child_icon_width"
        android:layout_height="@dimen/voice_child_icon_height"
        android:minHeight="@dimen/voice_child_icon_height"
        android:minWidth="@dimen/voice_child_icon_width"
        />

    <TextView
        android:id="@+id/voice_child_nickName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/voice_child_nickName_height"
        android:layout_marginBottom="@dimen/voice_child_nickName_margin_bottom"
        android:layout_marginTop="@dimen/voice_child_nickName_margin_top"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/gray"
        android:textSize="@dimen/voice_child_nickName_size"
        />

    <ImageView
        android:id="@+id/voice_child_speak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/voice_child_speak_margin_bottom"
        android:src="@mipmap/voice_toggle_open"
        android:visibility="invisible"
        />
</LinearLayout>