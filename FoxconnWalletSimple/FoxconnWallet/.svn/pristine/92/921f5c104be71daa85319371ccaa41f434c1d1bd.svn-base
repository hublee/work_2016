<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/common_space">
        <TextView
            android:id="@+id/exchange_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="@string/exchange_title2"/>

            <EditText
                android:id="@+id/exchange_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/exchange_tips"
                android:inputType="number"
                android:textColor="@color/important_text"
                android:background="@drawable/input_bg"
                android:textColorHint="@color/common_text_hint"
                android:textSize="@dimen/little_font"/>
        </LinearLayout>

        <TextView
            android:id="@+id/exchange_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/exchange_submit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/exchange_submit"
            android:background="@drawable/common_btn"
            android:layout_marginTop="@dimen/big_space"
            android:textColor="#fff"/>
    </LinearLayout>
</RelativeLayout>