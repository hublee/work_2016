<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="@string/check_phone"/>
            <EditText
                android:id="@+id/check_phone"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:hint="@string/check_tips1"
                android:inputType="phone"
                android:textColor="@color/important_text"
                android:textColorHint="@color/common_text_hint"
                android:layout_weight="1"
                android:background="@drawable/input_bg"
                android:textSize="@dimen/little_font"
                />
            <TextView
                android:id="@+id/check_sendcode"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="@string/check_getcode"
                android:background="@drawable/drak_btn"
                android:textSize="@dimen/little_font"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:gravity="center"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/little_space">

            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="@string/check_code"/>

            <EditText
                android:id="@+id/check_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/check_tips2"
                android:inputType="number"
                android:textColor="@color/important_text"
                android:background="@drawable/input_bg"
                android:textColorHint="@color/common_text_hint"
                android:textSize="@dimen/little_font"/>
        </LinearLayout>


        <Button
            android:id="@+id/check_submit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="@string/ok"
            android:background="@drawable/common_btn"
            android:layout_marginTop="@dimen/big_space"
            android:textColor="#fff"/>
    </LinearLayout>
</RelativeLayout>