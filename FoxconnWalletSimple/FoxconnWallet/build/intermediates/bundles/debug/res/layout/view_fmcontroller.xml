<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/common_space">
    
    <TextView 
        android:id="@+id/fm_center_nowplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nowplay_bg"
        android:layout_gravity="center"
        android:textSize="@dimen/little_font"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_space"
        >
        <ImageView
            android:id="@+id/fm_controller_anchor"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/cp_sdk_anchor"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/fm_controller_program"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/cp_sdk_program"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/fm_controller_play"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/cp_sdk_play2"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/fm_controller_attention"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/cp_sdk_attention"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/fm_controller_pop"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/cp_sdk_pop"
            android:layout_gravity="center_vertical"
            />
        
    </LinearLayout>

</LinearLayout>