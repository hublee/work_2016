<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg">


    <LinearLayout
        android:id="@+id/exchange_ok_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/exchangeok"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exchange_ok"
            android:textSize="@dimen/biggerer"
            android:textColor="#000"
            android:gravity="center"
            android:textStyle="bold"/>
    </LinearLayout>
    
    <TextView
        android:layout_below="@id/exchange_ok_layout" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exchange_ok_tips"
        android:gravity="center"/>


</RelativeLayout>