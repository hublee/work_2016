<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/biggest"
    android:layout_marginStart="@dimen/biggest"
    android:layout_marginRight="@dimen/biggest"
    android:layout_marginEnd="@dimen/biggest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_text"
            android:text="@string/exchange_title"
            android:textSize="@dimen/pop_label_font_size"
            android:gravity="center"/>
        
        <TextView
            android:id="@+id/exchange_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_input"
            android:textSize="@dimen/pop_input_font_size"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/separate"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_text"
            android:text="@string/exchange_title2"
            android:textSize="@dimen/pop_label_font_size"
            android:gravity="center"
            android:layout_marginTop="@dimen/common_space"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/separate"
            >
            
            <EditText
	            android:id="@+id/exchange_count"
	            android:layout_width="100dp"
	            android:layout_height="40dp"
	            android:inputType="number"
	            android:textColor="@color/common_input"
	            android:background="@color/check_bg"
	            android:textSize="@dimen/pop_input_font_size"
	            android:padding="@dimen/little_space"
	            android:textStyle="bold"
	            android:gravity="center"
	            android:maxLength="4"
	            android:layout_centerHorizontal="true"/>
	        
	        <TextView 
	            android:id="@+id/exchange_tips"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentEnd="true"
	            android:layout_alignParentBottom="true"
	            android:textColor="@color/common_tips"
	            android:layout_marginBottom="@dimen/little_space"
	            />
            
        </RelativeLayout>
       
    </LinearLayout>
    
    <TextView
        android:id="@+id/exchange_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pop_button_height"
        android:text="@string/exchange_submit"
        android:textSize="@dimen/pop_button_font_size"
        android:layout_alignParentBottom="true"
        android:textColor="@color/common_submit"
        android:gravity="center"
        android:layout_marginBottom="@dimen/common_space"/>
</RelativeLayout>