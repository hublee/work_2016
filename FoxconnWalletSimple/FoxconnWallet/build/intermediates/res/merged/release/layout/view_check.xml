<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/biggest"
    android:layout_marginStart="@dimen/biggest"
    android:layout_marginRight="@dimen/biggest"
    android:layout_marginEnd="@dimen/biggest">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textColor="@color/common_text"
             android:text="@string/check_phone"
             android:textSize="@dimen/pop_label_font_size"
             android:gravity="center"/>
       <EditText
           android:id="@+id/check_phone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="phone"
           android:textColor="@color/common_input"
           android:background="@drawable/separate"
           android:textSize="@dimen/pop_input_font_size"
           android:padding="@dimen/little_space"
           android:gravity="center"
           android:maxLength="11"
           />
        <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/common_text"
           android:text="@string/check_code"
           android:textSize="@dimen/pop_label_font_size"
           android:gravity="center"
           android:layout_marginTop="@dimen/common_space"/>

         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/separate"
            >
	       <EditText
	           android:id="@+id/check_code"
	           android:layout_width="100dp"
	           android:layout_height="40dp"
	           android:inputType="number"
	           android:textColor="@color/common_input"
	           android:background="@color/check_bg"
	           android:textSize="@dimen/pop_input_font_size"
	           android:padding="@dimen/little_space"
	           android:gravity="center"
	           android:maxLength="6"
	           android:layout_centerHorizontal="true"/>
	            
	       <TextView
	           android:id="@+id/check_sendcode"
	           android:layout_width="@dimen/pop_sendsms_button_width"
	           android:layout_height="@dimen/pop_sendsms_button_height"
	           android:textColor="@color/common_tips"
	           android:text="@string/check_getcode"
	           android:textSize="@dimen/little_font"
	           android:layout_alignParentRight="true"
	           android:layout_alignParentEnd="true"
	           android:layout_alignParentBottom="true"
	           />
       	</RelativeLayout>
       
    </LinearLayout>
    
    <TextView
        android:id="@+id/check_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pop_button_height"
        android:text="@string/check_now"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/pop_button_font_size"
        android:gravity="center"
        android:textColor="@color/common_submit"
        android:layout_marginBottom="@dimen/common_space"/>
</RelativeLayout>