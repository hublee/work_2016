<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/dialog_width"
    	android:layout_height="wrap_content"
    	android:background="@drawable/dialog_bg"
    	android:layout_marginTop="60dp"
        >
        
        <ImageView
	        android:id="@+id/dialog_cancel"
	        android:layout_width="@dimen/pop_close"
	        android:layout_height="@dimen/pop_close"
	        android:text="@string/cancel"
	        android:padding="@dimen/little_space"
	        android:layout_margin="@dimen/common_space"
	        android:src="@drawable/cp_sdk_close"
	        android:layout_gravity="end"
	        />
    
        <ImageView 
            android:id="@+id/dialog_tipsimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cp_sdk_success"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/bigger"
            />
        
	    <TextView 
	        android:id="@+id/dialog_msg"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="@dimen/dialog_msg_left"
	        android:textColor="#000"
	        android:gravity="center"
	        android:textSize="@dimen/bigger_font"
	        />
	
	     <TextView 
	        android:id="@+id/dialog_content"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingBottom="@dimen/dialog_msg_left"
	        android:gravity="center"
	        android:textSize="@dimen/big_font"
	        android:layout_marginLeft="@dimen/common_space"
	        android:layout_marginRight="@dimen/common_space"
	        />
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	        
	        <!-- <TextView
	            android:id="@+id/dialog_cancel"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/cancel"
	            android:gravity="center"
	            android:textColor="@color/dialog_cancel"
	            android:padding="@dimen/big_space"
	            android:textSize="@dimen/bigger_font"
	            /> -->
	        
	      
	        <TextView
	            android:id="@+id/dialog_ok"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/ok"
	            android:gravity="center"
	            android:textColor="@color/dialog_ok"
	            android:padding="@dimen/big_space"
	            android:textSize="@dimen/bigger_font"
	            />
	    </LinearLayout>
	</LinearLayout>
    
    
    <ImageView
        android:id="@+id/dialog_topimg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        />
    
    
    
</RelativeLayout>