<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_content_bg"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:id="@+id/backable_title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pop_title_height"
            >
            
            <!-- <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:textSize="@dimen/biggest_font"/> -->
            
            <ImageView
                android:id="@+id/close"
                android:layout_width="@dimen/pop_close"
                android:layout_height="@dimen/pop_close"
                android:padding="@dimen/little_space"
                android:layout_marginRight="@dimen/biggerer"
                android:layout_marginEnd="@dimen/biggerer"
                android:src="@drawable/cp_sdk_close"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
            
        </RelativeLayout>
        
        <LinearLayout
            android:id="@+id/closeable_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/backable_title_layout"
            >

        </LinearLayout>
    </RelativeLayout>

    <ImageView 
        android:id="@+id/commonpop_topimg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/cp_sdk_exchange_top"
        android:layout_centerHorizontal="true"
        />
    
</RelativeLayout>